<a href= <%= pigeon_path(pigeon) %>>
  <div class="card-trip-pigeon m-3">
      <% if pigeon.photo.attached? %>
        <%= cl_image_tag pigeon.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
    <div class="card-trip-infos-pigeon">

      <div>
        <h2> <%= pigeon.name %></h2>
        <p> <%= pigeon.color.capitalize %></p>
      </div>

      <div>
        <h2 class="card-trip-pricing">$<%= pigeon.price %></h2>
        <p>/per day</p>
      </div>

    </div>

    <div class="card-trip-infos-pigeon">
      <div>
        <%= link_to "Edit",
                    edit_pigeon_path(pigeon),
                    class: 'btn-flat'
                    %>

        <%= link_to "Delete",
                  pigeon_path(pigeon),
                  data: { turbo_method: :delete, turbo_confirm: 'Sure?' },
                  class: 'btn-flat'%>
      </div>
    </div>
  </div>
</a>
