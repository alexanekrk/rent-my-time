<div class="container d-flex">
  <div>
    <h1><%= @pigeon.name %> the Pigeon</h1>

      <% if @pigeon.photo.attached? %>
        <%= cl_image_tag @pigeon.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>

      <div class="container">
        <p>Color: <%= @pigeon.color %><p>
        <p>Price: <%= @pigeon.price  %></p>
        <p>address: <%= @pigeon.address  %></p>
      </div>


      <div>
        <% if current_user != nil && current_user.id == @pigeon.user_id %>
          <%= link_to "Edit", edit_pigeon_path(@pigeon) %>

          <%= link_to "Delete",
                    pigeon_path(@pigeon),
                    data: { turbo_method: :delete, turbo_confirm: 'Sure?' },
                    class: 'btn btn-danger'%>
        <% else %>
            <div>
          <%= link_to "Book",  new_pigeon_booking_path(@pigeon)%>
            </div>
        <% end %>
  </div>




  </div>


  <div class='d-flex'>
    <%= render 'bookings/form' %>
  </div>
</div>
