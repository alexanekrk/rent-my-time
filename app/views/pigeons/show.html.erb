<div class="container">
  <h1><%= @pigeon.name %> the Pigeon</h1>

    <% if @pigeon.photo.attached? %>
        <%= cl_image_tag @pigeon.photo.key, height: 400, width: 500, crop: :fill %>
    <% end %>
  <div class="d-flex justify-content-between">

    <div>
      <div class="infos">
        <i class="fi fi-bs-raindrops"></i>
        <p>Color: <%= @pigeon.color %><p>
        <p>address: <%= @pigeon.address  %></p>
        <p>age: <%= @pigeon.age %></p>
        <p>description <%= @pigeon.description %></p>
      </div>

    </div>
    <div class='form'>
      <h2><%= @pigeon.price %></h2>$/per day
      <div class='d-flex'>
        <p><%= render 'bookings/form' %></p>
      </div>
    </div>

  </div>
</div>
