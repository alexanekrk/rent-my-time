<div class="name">
    <h1><%= @pigeon.name %> the Pigeon</h1>
</div>

<div class="map" style="width: 100%; height: 300px;"
  data-controller="map"
  data-map-markers-value="<%= @marker.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="container">

  <% if @pigeon.photo.attached? %>
    <%= cl_image_tag @pigeon.photo.key, height: 180, width: 180, crop: :fill, class:'i' %>
  <% end %>

  <div class="d-flex justify-content-between">
    <div>
      <div class="box">
        <h4>Description</h4>
        <p><%= @pigeon.description %></p>
      </div>

      <div class="infos box">
        <h4>Details</h4>
        <i class="fi fi-bs-raindrops"></i>
        <p>Color: <%= @pigeon.color %><p>
        <p>address: <%= @pigeon.address  %></p>
        <p>age: <%= @pigeon.age %></p>
      </div>

    </div>
    <div class='form'>
      <h2><%= @pigeon.price %></h2>$/per day
      <div class='d-flex'>
        <p><%= render 'bookings/form' %></p>
      </div>
    </div>

  </div>
</div>
