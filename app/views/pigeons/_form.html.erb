<%= simple_form_for(@pigeon) do |f| %>
<%= f.input :name, placeholder:"Write the name of your pigeon"%>
<%= f.input :description %>
<%= f.input :color, collection: ['grey', 'black', 'red', 'blue'] %>
<%= f.input :photo, as: :file%>
<%= f.input :age %>
<%= f.input :price %>
<%= f.input :address %>
<%= f.submit %>
<% end %>
