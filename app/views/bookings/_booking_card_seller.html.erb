

  <div class="card-trip" data-move-booking-target="link">
    <div class="card-trip-infos">

      <div class="d-flex">

        <div>
          <a href=<%= booking_path(booking) %>>
            <h2> Owner: <%= current_user.first_name %></h2>
            <h2> Rentee: <%= buyer.first_name %></h2>
            <h2> Pigeon: <%= pigeon.name %></h2>
            <%= booking.approved %>
            <div>
              <p>Start date: <%= booking.start_date %></p>
              <p>End date:<%= booking.end_date %></p>
            </div>
          </a>
          <div class="my-3 d-flex gap-3">
            <%# Accept --> move the card to the other column %>
            <%= button_to "Accept", approve_path(booking), method: "patch", class: "btn btn-flat", params: { approved: 1 } %>
            <%# Delete it from db %>
            <%= button_to "Reject", approve_path(booking), method: "patch", class: "btn btn-flat", params: { approved: 0 } %>

              <%# <%= link_to "Reject",
                      booking_path(booking),
                      data: { turbo_method: :delete, turbo_confirm: 'Sure?' },
                      class: "btn-flat" %>
          </div>
        </div>

          <div class="p-3">
            <% if booking.pigeon.photo.attached? %>
              <%= cl_image_tag booking.pigeon.photo.key, height: 300, width: 400, crop: :fill, class: "card-trip-user avatar-bordered" %>
            <% end %>
          </div>

      </div>

    </div>
  </div>
