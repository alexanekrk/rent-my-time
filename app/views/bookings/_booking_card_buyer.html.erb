<a href= <%= booking_path(booking) %>>
  <div class="card-trip">
  <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" /> %>
    <div class="card-trip-infos">
      <div>
        <div class="d-flex">
          <h2> Seller: <%= seller.first_name %></h2>
        </div>
        <div>
          <h2> Buyer: <%= current_user.first_name  %></h2>
        </div>
        <div>
          <h2> Pigeon: <%= pigeon.name  %></h2>
        </div>
        <div>
          <p>Start date: <%= booking.start_date %></p>
          <p>End date: <%= booking.end_date %></p>
        </div>
      </div>
        <div class="p-3">
          <% if booking.pigeon.photo.attached? %>
            <%= cl_image_tag booking.pigeon.photo.key, height: 300, width: 400, crop: :fill, class: "card-trip-user avatar-bordered" %>
          <% end %>
          </div>
      </div>
  </div>
</a>
